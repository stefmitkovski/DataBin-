@using Microsoft.AspNetCore.Identity
@using DataBin.Areas.Identity.Data

@inject SignInManager<DataBinUser> SignInManager
@inject UserManager<DataBinUser> UserManager

@* <ul class="navbar-nav"> *@
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="btn btn-outline-light me-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-outline-light me-2">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-light" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-outline-light me-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
